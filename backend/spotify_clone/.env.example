# Environment variables for the spotify_clone Django project
# Copy this file to .env and fill in the actual values
# Keep .env file secret and DO NOT commit it to version control

# REQUIRED: Django secret key (generate a new one for production)
# Generate with: python3 -c "import secrets; print(secrets.token_urlsafe(50))"
DJANGO_SECRET_KEY=

# PostgreSQL connection URL in the form:
# postgres://USER:PASSWORD@HOST:PORT/DBNAME
# Leave empty to use SQLite for local development
DATABASE_URL=

# Set to True or False
DEBUG=True

# Comma-separated allowed hosts (optional). Example: localhost,127.0.0.1,mydomain.com
ALLOWED_HOSTS=localhost,127.0.0.1
